package gonzalez.salvador.solid;

public class Triangulo {
	// atributos para triangulo
	public float altura;
	public float base;
	
	// creamos el constructor de la clase
	public Triangulo(float altura, float base) {
		this.setAltura(altura);
		this.setBase(base);
	}
	
	// Creamos los getters & setts de cada uno de los atributos
	public float getAltura() {
		return altura;
	}
	public void setAltura(float altura) {
		this.altura = altura;
	}
	
	public float getBase() {
		return base;
	}
	public void setBase(float base) {
		this.base = base;
	}
	
	//creamos nuestro metono Ã¡rea de la base;
	public float area() {
		return ( this.getAltura() * this.getBase() );
	}
	
	
}
