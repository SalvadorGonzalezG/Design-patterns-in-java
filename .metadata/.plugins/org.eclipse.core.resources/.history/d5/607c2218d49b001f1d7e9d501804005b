package com.gonzalez.sf;

public class Pizza {

	// creamos un atributo private para que tengamos acceso a el unicamente con nuestros setters & gettrs
	private int cantidadRebanadas;
	
	// creamos el constructor de la clase
	public Pizza(int cantidadRebanadas) {
		this.cantidadRebanadas = cantidadRebanadas;
	}
	
	// sobreescribimos nuestro metodo toString
	
	public String toString() {
		return "Pizza con " + this.cantidadRebanadas + " rebanadas";
	}

}
