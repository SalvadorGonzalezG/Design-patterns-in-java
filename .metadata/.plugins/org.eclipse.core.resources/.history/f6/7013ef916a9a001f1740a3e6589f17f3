package gonzalez.salvador.tdd;

public class Rectangulo {
	// Creamos 2 atributos de la clase: altura y base
	public float altura;
	public float base;
	
	// Creamos el constructor de la clase
	public Rectangulo(float altura, float base) {
		this.setBase(base);
		this.setAltura(altura);
	}
	
	// crearemos los gettrs y settes de los atributos de la clase
	public float getAltura() {
		return altura;
	}
	public void setAltura(float altura) {
		this.altura = altura;
	}
	
	public float getBase() {
		return base;
	}
	public void setBase(float base) {
		this.base = base;
	}
	
	// creamos el metodo area el cual regresara el área del rectangulo 
	public String area() {
		return "El área del rectangulo es: " + this.getAltura() * this.getBase();
	}
	
	// colocamos el metodo toString
	public String toString() {
		return "Base " + this.getBase() + " y " + " altura " + this.getAltura();
	}
	
	// colocamos un metodo que retorne el objeto 
	//public void imprimit() { System.out.println(this); }	
	
}
